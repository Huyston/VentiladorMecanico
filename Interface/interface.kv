BoxLayout:
    orientation:'vertical'
    Plot:
        parameter:'P'
        plot:'Pplot.png'
    Plot:
        parameter:'Flow'
        plot:'VdotPlot.png'
    Plot:
        parameter:'Vt'
        plot:'VtPlot.png'
    BoxLayout:
        size_hint_y:None
        height:root.height/5
        Mostrador:
            parameter:'FiO2'
            unit:'%'
            value:'50'
        Mostrador:
            parameter:'TV'
            unit:'mL'
            value:'50'
        Mostrador:
            parameter:'Rate'
            unit:'/min'
            value:'10'
        Mostrador:
            parameter:'IE'
            unit:''
            value:'1:2.5'
        Mostrador:
            parameter:'PEEP'
            unit:'cmH2O'
            value:'20'
        Mostrador:
            parameter:'Pmax'
            unit:'cmH2O'
            value:'35'
        Mostrador:
            parameter:'Compliance'
            unit:'mL/cmH20'
            value:'27'

<Mostrador@BoxLayout>:
    parameter:''
    unit:''
    value:'0'
    orientation:'vertical'
    Label:
        text:root.parameter
        size_hint_y:None
        height:root.height/5
        font_size:root.height/5
        bold:True
    Label:
        text:root.unit
        size_hint_y:None
        height:root.height/5
        font_size:root.height/5
        bold:True
    Label:
        text:root.value
        font_size:3*root.height/5
        bold:True

<Plot@BoxLayout>:
    plot:''
    parameter:''
    Label:
        text:root.parameter
        size_hint_x:None
        width:root.height/1.5
        font_size:root.height/3
    Image:
        source:root.plot
        keep_ratio:False
        allow_stretch:True
